{% extends 'base.html.twig' %}

{% block title %}RSS List{% endblock %}

{% block body %}
  <div class="container text-center mt-5">
    <div class="row justify-content-center">
      <div class="col">
        <div class="card">
          <div class="card-header">
            Create a rss below.
          </div>
          <div class="card-body">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>View</th>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Content Link</th>
                  <th>Publish Date</th>
                </tr>
              </thead>
              <tbody>
                {% for rssListRow in rssList %}
                  <tr>
                    <td><a href="{{ path('rss_view',{'rmRssId':rssListRow.rmRssId})}}">View Rss</a></td>
                    <td>{{rssListRow.title}}</td>
                    <td>{{rssListRow.description}}</td>
                    <td><a href="{{rssListRow.contentLink}}">{{rssListRow.contentLink}}</a></td>
                    <td>{{rssListRow.pubDate}}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
            <a class="btn-secondary btn" href="{{ path('rss_download')}}">Download More </a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}


